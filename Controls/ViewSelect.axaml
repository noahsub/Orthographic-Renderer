<UserControl
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Orthographic.Renderer.Controls.ViewSelect"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid ColumnDefinitions="*,10,*">
        <Label
            Content="Select"
            Grid.Column="0"
            VerticalAlignment="Center" />
        <StackPanel
            Grid.Column="2"
            Orientation="Horizontal"
            Spacing="10"
            x:Name="ViewStackPanel">
            <ToggleButton
                Content="All"
                Height="30"
                x:Name="AllButton" />
            <ToggleButton
                Content="None"
                Height="30"
                x:Name="NoneButton" />
            <ToggleButton
                Content="Invert"
                Height="30"
                x:Name="InvertButton" />
        </StackPanel>
    </Grid>
</UserControl>
