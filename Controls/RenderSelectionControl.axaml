<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="100"
             x:Class="Orthographic.Renderer.Controls.RenderSelectionControl">
    <UserControl.Styles>
        <Style Selector="Label">
            <Setter Property="Foreground" Value="GhostWhite"></Setter>
            <Setter Property="FontFamily" Value="{StaticResource JetBrainsMono}"></Setter>
        </Style>
        <Style Selector="CheckBox">
            <Setter Property="BorderBrush" Value="Wheat"/>
        </Style>
    </UserControl.Styles>
    
    <Grid x:Name="Grid" Background="#1a1b1e" Height="100">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Image x:Name="Image" Grid.Column="0" MaxHeight="65" MaxWidth="65"/>
        <Label x:Name="Name"  Grid.Column="1" Content="Top Front Right" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="20 0 0 0"/>
        <CheckBox x:Name="CheckBox" Grid.Column="2"/>
    </Grid>
</UserControl>
