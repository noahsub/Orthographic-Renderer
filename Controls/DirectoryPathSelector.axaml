<UserControl
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Orthographic.Renderer.Controls.DirectoryPathSelector"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid ColumnDefinitions="*,10,Auto">
        <TextBox
            Grid.Column="0"
            Watermark="Directory path"
            x:Name="PathTextBox" />
        <Button
            Click="BrowseButton_OnClick"
            Content="Browse"
            Grid.Column="2"
            x:Name="BrowseButton" />
    </Grid>
</UserControl>
