<UserControl
    d:DesignHeight="100"
    d:DesignWidth="800"
    mc:Ignorable="d"
    x:Class="Orthographic.Renderer.Controls.ViewSortOptions"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid ColumnDefinitions="*,10,*">
        <Label
            Content="Sort"
            Grid.Column="0"
            VerticalAlignment="Center" />
        <StackPanel
            Grid.Column="2"
            Orientation="Horizontal"
            Spacing="10"
            x:Name="FacesStackPanel">
            <ToggleButton Content="Front" Height="30" />
            <ToggleButton Content="Right" Height="30" />
            <ToggleButton Content="Back" Height="30" />
            <ToggleButton Content="Left" Height="30" />
            <ToggleButton Content="Top" Height="30" />
            <ToggleButton Content="Bottom" Height="30" />
        </StackPanel>
    </Grid>
</UserControl>
