<UserControl
    d:DesignHeight="300"
    d:DesignWidth="200"
    mc:Ignorable="d"
    x:Class="Orthographic.Renderer.Controls.ViewSelection"
    xmlns="https://github.com/avaloniaui"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid Height="300" x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="75" />
        </Grid.RowDefinitions>
        <Rectangle
            Fill="{StaticResource PrimaryBackground}"
            Grid.Row="0"
            Grid.RowSpan="2"
            RadiusX="{StaticResource RadiusRectangle}"
            RadiusY="{StaticResource RadiusRectangle}" />
        <Image
            Grid.Row="0"
            HorizontalAlignment="Center"
            Margin="20,20,20,20"
            MaxHeight="150"
            MaxWidth="150"
            VerticalAlignment="Center"
            x:Name="ViewImage" />
        <Label
            Content="Top Front Right"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            x:Name="NameLabel" />
        <CheckBox
            Grid.Row="0"
            HorizontalAlignment="Right"
            Margin="10,10,10,10"
            VerticalAlignment="Top"
            x:Name="SelectCheckBox" />
    </Grid>
</UserControl>
