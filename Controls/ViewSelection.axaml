<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="200" d:DesignHeight="300"
             x:Class="Orthographic.Renderer.Controls.ViewSelection">
    <Grid x:Name="MainGrid" Height="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        
        <Image Grid.Row="0" x:Name="ViewImage" Margin="20 20 20 20" MaxHeight="150" MaxWidth="150" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Label Grid.Row="1" x:Name="NameLabel" Content="Top Front Right" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <CheckBox x:Name="SelectCheckBox" Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10 10 10 10"/>
    </Grid>
</UserControl>
